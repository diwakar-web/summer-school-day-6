{
  "manifest_version": 3,
  "name": "Weather Finder",
  "version": "1.0",
  "description": "A simple extension to find weather by city or location.",
  
  "permissions": [
    "geolocation"
  ],
  
  "host_permissions": [
    "https://api.openweathermap.org/"
  ],

  "action": {
    "default_popup": "popup.html"
  }
}
